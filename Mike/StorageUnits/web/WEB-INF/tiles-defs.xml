<?xml version="1.0" encoding="UTF-8" ?>

 <!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 1.1//EN"
       "http://jakarta.apache.org/struts/dtds/tiles-config_1_1.dtd">

<tiles-definitions>

    <definition name=".mainLayout" path="/base/base.jsp">
        <put name="header" value="/header.jsp" />
        <put name="body"   value="" />
        <put name="footer" value="" />
    </definition>

    <definition name=".mainClassicLayout" path="/base/base_classic.jsp">
        <put name="header" value="/header.jsp" />
        <put name="menu" value = "/menu.jsp" />
        <put name="body"   value="" />
        <put name="footer" value="/footer.jsp" />
    </definition>

    <definition name="loginTile" extends=".mainLayout">
        <put name="body"   value="/login.jsp" />
    </definition>

    <definition name="mainTile" extends=".mainLayout">
        <put name="body"   value="/main.jsp" />
    </definition>

</tiles-definitions>
