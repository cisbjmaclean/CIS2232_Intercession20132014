<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>

    <!--
         This is a minimal Validator form file with a couple of examples.
    -->

    <global>

        <!-- An example global constant
        <constant>
            <constant-name>postalCode</constant-name>
            <constant-value>^\d{5}\d*$</constant-value>
        </constant>
        end example-->

    </global>

    <formset>
        <form name="loginForm">
            <field
                property="username"
                depends="required">
                <arg key="error.login.user.name"/>
            </field>
            <field
                property="password"
                depends="required,mask">
                <arg key="error.login.user.password"/>
                <var>
                    <var-name>mask</var-name>
                    <var-value>^[0-9a-zA-Z]*$</var-value>
                </var>
            </field>
        </form>
        
        <form name="addUpdateCustomerForm">
            <field
                property="username"
                depends="required">
                <arg key="error.create.customer.user.name"/>
            </field>
            <field
                property="password"
                depends="required,mask,minlength">
                <arg key="error.create.customer.password"/>
                <arg position="0" key="customer.name"/>
                <arg position="1" name="minlength" key="${var:minlength}" resource="false"/>
                <var>
                    <var-name>mask</var-name>
                    <var-value>^[0-9a-zA-Z]*$</var-value>
                </var> 			
                <var>
                    <var-name>minlength</var-name>
                    <var-value>8</var-value>
                </var>			
            </field>
            <field
                property="password2"
                depends="required,mask,validwhen">
                <arg key="error.create.customer.password"/>
                <msg name="validwhen" key="errors.password.nomatch" />
                <var>
                    <var-name>mask</var-name>
                    <var-value>^[0-9a-zA-Z]*$</var-value>
                </var>            
                <var>
                    <var-name>test</var-name>
                    <var-value>(password==*this*)</var-value>
                </var> 
            </field>
            <field
                property="email"
                depends="required,email">
                <arg key="error.create.customer.email"/>
            </field>
            <field
                property="email2"
                depends="required,email,validwhen">
                <arg key="error.create.customer.email"/>          
                <msg name="validwhen" key="errors.email.nomatch" />
                <var>
                    <var-name>test</var-name>
                    <var-value>(email==*this*)</var-value>
                </var>
            </field> 
            <field
                property="firstName"
                depends="required">
                <arg key="error.create.customer.first.name"/>
            </field>
            <field
                property="lastName"
                depends="required">
                <arg key="error.create.customer.lastName"/>
            </field>
            <field
                property="address"
                depends="required">
                <arg key="error.create.customer.address"/>
            </field>
            <field
                property="city"
                depends="required">
                <arg key="error.create.customer.city"/>
            </field>
            <field
                property="province"
                depends="required">
                <arg key="error.create.customer.province"/>
            </field>
            <field
                property="postalCode"
                depends="required">
                <arg key="error.create.customer.postalCode"/>
                <var>
                    <var-name>mask</var-name>
                    <var-value>^([A-Z]\d[A-Z]\s\d[A-Z]\d)$</var-value>
                </var>
            </field>     
            <field
                property="phoneNumber"
                depends="required">
                <arg key="error.create.customer.phoneNumber"/>
            </field>                  
        </form>
        
        <form name="reserveStorageUnitForm">
            <field property="dateTo" depends="required,date">
                <arg position="0" key="errors.date.to"/>
                <var>
                    <var-name>datePattern</var-name>
                    <var-value>MM/dd/yyyy</var-value>
                </var>
            </field>
        </form>
        
        <form name="reserveStorageUnitForm">
            <field property="dateTo" depends="required,date">
                <arg position="0" key="errors.date.to"/>
                <var>
                    <var-name>datePattern</var-name>
                    <var-value>MM/dd/yyyy</var-value>
                </var>
            </field>
        </form>
             
        <form name="storageUnitForm">
            <field
                property="unitType"
                depends="required">
                <arg key="error.admin.add.storage.unit.unit.type"/>
            </field>
            <field
                property="unitDimensions"
                depends="required">
                <arg key="error.admin.add.storage.unit.unit.dimensions"/>
            </field>            
        </form>             
    </formset>

    <!-- An example formset for another locale -->
    <formset language="fr">

        <constant>
            <constant-name>postalCode</constant-name>
            <constant-value>^[0-9a-zA-Z]*$</constant-value>
        </constant>

        <!-- An example form -->
        <form name="logonForm">
            <field
                property="username"
                depends="required">
                <arg key="logonForm.username"/>
            </field>
            <field
                property="password"
                depends="required,mask">
                <arg key="logonForm.password"/>
                <var>
                    <var-name>mask</var-name>
                    <var-value>^[0-9a-zA-Z]*$</var-value>
                </var>
            </field>
        </form>

    </formset>

</form-validation>
