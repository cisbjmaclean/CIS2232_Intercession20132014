<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>

    <!--
         This is a minimal Validator form file with a couple of examples.
    -->

    <global>

        <!-- An example global constant
        <constant>
            <constant-name>postalCode</constant-name>
            <constant-value>^\d{5}\d*$</constant-value>
        </constant>
        end example-->

    </global>

    <formset>
        <form name="addUserForm">
<!--            <field
                property="username"
                depends="required">
                <arg key="AddUserForm.username"/>
            </field>
            <field
                property="password"
                depends="required,mask">
                <arg key="AddUserForm.password"/>
                <var>
                    <var-name>mask</var-name>
                    <var-value>^[0-9a-zA-Z]*$</var-value>
                </var>
            </field>
            <field
                property="password2"
                depends="required,mask">
                <arg key="AddUserForm.password2"/>
                <var>
                    <var-name>mask</var-name>
                    <var-value>^[_A-Za-z0-9-\\+]+(\\.[_A-Za-z0-9-]+)*@[A-Za-z0-9-]+(\\.[A-Za-z0-9]+)*(\\.[A-Za-z]{2,})$</var-value>
                </var>
            </field>
           <field
                property="email"
                depends="required,mask">
                <arg key="AddUserForm.email"/>
                <var>
                    <var-name>mask</var-name>
                    <var-value>^[_A-Za-z0-9-\\+]+(\\.[_A-Za-z0-9-]+)*@[A-Za-z0-9-]+(\\.[A-Za-z0-9]+)*(\\.[A-Za-z]{2,})$</var-value>
                </var>
            </field>
            <field
                property="email2"
                depends="required,mask">
                <arg key="AddUserForm.email2"/>
                <var>
                    <var-name>mask</var-name>
                    <var-value>^[0-9a-zA-Z]*$</var-value>
                </var>
            </field> 
            <field
                property="firstName"
                depends="required">
                <arg key="AddUserForm.firstName"/>
            </field>
            <field
                property="middleInitial"
                depends="required">
                <arg key="AddUserForm.middleInitial"/>
            </field>
            <field
                property="lastName"
                depends="required">
                <arg key="AddUserForm.lastName"/>
            </field>
            <field
                property="address"
                depends="required">
                <arg key="AddUserForm.address"/>
            </field>
            <field
                property="city"
                depends="required">
                <arg key="AddUserForm.city"/>
            </field>
            <field
                property="province"
                depends="required">
                <arg key="AddUserForm.province"/>
            </field>
            <field
                property="postalCode"
                depends="required">
                <arg key="AddUserForm.postalCode"/>
                <var>
                    <var-name>mask</var-name>
                    <var-value>^([A-Z]\d[A-Z]\s\d[A-Z]\d)$</var-value>
                </var>
            </field>     
            <field
                property="phoneNumber"
                depends="required">
                <arg key="AddUserForm.phoneNumber"/>
            </field>    
            <field property="password2" depends="validwhen">
                <msg name="validwhen" key="errors.password.nomatch" />
                <var>
                    <var-name>test</var-name>
                    <var-value>(password==*this*)</var-value>
                </var>              
            </field>  
            <field property="email2" depends="validwhen">
                <msg name="validwhen" key="errors.email.nomatch" />
                <var>
                    <var-name>test</var-name>
                    <var-value>(email==*this*)</var-value>
                </var>              
            </field>         -->
        </form>
        
        <!-- An example form -->
        <form name="logonForm">
            <field
                property="username"
                depends="required">
                <arg key="logonForm.username"/>
            </field>
            <field
                property="password"
                depends="required,mask">
                <arg key="logonForm.password"/>
                <var>
                    <var-name>mask</var-name>
                    <var-value>^[0-9a-zA-Z]*$</var-value>
                </var>
            </field>
        </form>

    </formset>

    <!-- An example formset for another locale -->
    <formset language="fr">

        <constant>
            <constant-name>postalCode</constant-name>
            <constant-value>^[0-9a-zA-Z]*$</constant-value>
        </constant>

        <!-- An example form -->
        <form name="logonForm">
            <field
                property="username"
                depends="required">
                <arg key="logonForm.username"/>
            </field>
            <field
                property="password"
                depends="required,mask">
                <arg key="logonForm.password"/>
                <var>
                    <var-name>mask</var-name>
                    <var-value>^[0-9a-zA-Z]*$</var-value>
                </var>
            </field>
        </form>

    </formset>

</form-validation>
